                        alert(data.name);
                    }else{
                        data = "APPROVERS:\n\n"+data.toString().replace(/,/g,"\n")
                        alert(data);
                    }
                }


            }, error: function (data) {
                //console.log(data)
            }
        });
    }

</script>

